<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-4">
    <h1 class="mb-3">Gestión de Productos</h1>

    <% if (error) { %>
    <div class="alert alert-danger"><%= error.message %></div>
    <% } %>

    <form action="/productos/add" method="POST" class="row g-2 mb-4">
        <input type="text" name="nombre" placeholder="Nombre" class="form-control col">
        <input type="number" step="0.01" name="precio" placeholder="Precio" class="form-control col">
        <input type="number" name="stock" placeholder="Stock" class="form-control col">
        <select name="estado" class="form-select col">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
        <button class="btn btn-primary col" type="submit">Añadir</button>
    </form>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Estado</th>
            <th>Acción</th>
        </tr>
        </thead>
        <tbody>
        <% productos.forEach(p => { %>
        <tr>
            <td><%= p.id %></td>
            <td><%= p.nombre %></td>
            <td><%= p.precio %></td>
            <td><%= p.stock %></td>
            <td><%= p.estado ? "Activo" : "Inactivo" %></td>
            <td>
                <form action="/productos/delete/<%= p.id %>" method="POST" style="display:inline;">
                    <button class="btn btn-danger btn-sm">Eliminar</button>
                </form>
                
                <a href="/productos/edit/<%= p.id %>" class="btn btn-warning btn-sm">Editar</a>
            </td>
              
        </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
